<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.Courses">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        shadow:sl_cornerRadius="10dp"
        shadow:sl_dx="2dp"
        shadow:sl_dy="2dp"
        shadow:sl_shadowColor="#11e1e2e4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/rounded_corner_5dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_courses">


            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </com.dd.ShadowLayout>



</FrameLayout>
